# Environment Variables

# Database Connections
AUTH_DB_CONNECTION=Host=auth-db;Database=authdb;Username=postgres;Password=postgres123
USER_DB_CONNECTION=Host=user-db;Database=userdb;Username=postgres;Password=postgres123
POST_DB_CONNECTION=Host=post-db;Database=postdb;Username=postgres;Password=postgres123
COMMENT_DB_CONNECTION=Host=comment-db;Database=commentdb;Username=postgres;Password=postgres123
LIKE_DB_CONNECTION=Host=like-db;Database=likedb;Username=postgres;Password=postgres123
FEED_DB_CONNECTION=Host=feed-db;Database=feeddb;Username=postgres;Password=postgres123
SEARCH_DB_CONNECTION=Host=search-db;Database=searchdb;Username=postgres;Password=postgres123

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest

# Redis
REDIS_CONNECTION=redis:6379

# JWT
JWT_SECRET=your-super-secret-key-change-this-in-production-min-32-chars
JWT_ISSUER=SocialMediaPlatform
JWT_AUDIENCE=SocialMediaPlatform

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://auth-api:80
USER_SERVICE_URL=http://user-api:80
POST_SERVICE_URL=http://post-api:80
COMMENT_SERVICE_URL=http://comment-api:80
LIKE_SERVICE_URL=http://like-api:80
FEED_SERVICE_URL=http://feed-api:80
MEDIA_SERVICE_URL=http://media-api:80
NOTIFICATION_SERVICE_URL=http://notification-api:80
SEARCH_SERVICE_URL=http://search-api:80

# API Gateway
GATEWAY_PORT=5000

# Media Storage (AWS S3 or Azure Blob)
STORAGE_TYPE=local
AWS_ACCESS_KEY=your-aws-access-key
AWS_SECRET_KEY=your-aws-secret-key
AWS_BUCKET_NAME=social-media-uploads
AWS_REGION=us-east-1
